{% import "components/form/fields_macros.html.twig" as fields %}

<form method="post" action="{{ formurl }}">
    <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
    {{ fields.dropdownYesNo(
        'use_filter_assign_group',
        this['use_filter_assign_group'],
        __('Bypass filtering on the groups assignment', 'escalade'),
        {
            'label_class': 'col-8 col-sm-8',
            'input_class': 'col-4 col-sm-4',
            'full_width': false,
            'rand': rand
        }
    ) }}

    <input type='hidden' name='users_id' value='{{ users_id }}'>
    {% if not is_exist %}
        <div class="hstack gap-1">
            <div class="pe-5 ms-auto">
                <button class="btn btn-primary" type="submit" name="add" value="1">
                    <i class="ti ti-plus"></i>
                    <span>{{ _x('button', 'Add') }}</span>
                </button>
            </div>
        </div>
    {% else %}
        <input type='hidden' name='id' value='{{ this['id'] }}'>
        <div class="hstack gap-1">
            <div class="pe-5 ms-auto">
                <button class="btn btn-primary" type="submit" name="update" value="1">
                    <i class="ti ti-device-floppy"></i>
                    <span>{{ _x('button', 'Save') }}</span>
                </button>
            </div>
        </div>
    {% endif %}
</form>